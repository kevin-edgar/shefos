      case "$main_menu" in
         "1" ) clear ; pacman -Syy ; basestrap -i /mnt mesa mesa-demos lib32-mesa vulkan-intel lib32-vulkan-intel vulkan-icd-loader lib32-vulkan-icd-loader network-manager-applet --noconfirm

